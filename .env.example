# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/vikingchess

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_ID=your-github-client-id
GITHUB_SECRET=your-github-client-secret

# Email Configuration (Optional - for production)
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@example.com
EMAIL_SERVER_PASSWORD=your-email-password
EMAIL_FROM=noreply@vikingchess.com

# Monitoring Configuration
VITE_SENTRY_DSN=your-sentry-dsn-here
VITE_ANALYTICS_ENDPOINT=https://your-analytics-endpoint.com/api/events
VITE_ALERT_WEBHOOK_URL=https://your-webhook-url.com/alerts
VITE_APP_VERSION=1.0.0

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=0.1